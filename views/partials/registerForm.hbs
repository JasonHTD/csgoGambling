<div class="login-container">
  <form class="login-form" action="" method="post" autocomplete="off">
    <div class="text center control-group">
      <input class="text center medium light" type="text" name="username" value="" placeholder="Username">
    </div>
    <div class="text center control-group">
      <input class="text center medium light" type="password" name="password" value="" placeholder="Password">
    </div>
    <div class="text center control-group">
      <input class="text center medium light" type="password" name="passwordConfirm" value="" placeholder="Confirm Password">
    </div>
    <div class="text center control-group">
      <input class="text center medium light" type="email" name="email" value="" placeholder="Email Address">
    </div>
    <div class="text center control-group">
      <input class="text center medium light" type="number" min="19" max="99" name="age" value="" placeholder="Age">
    </div>
    <div class="text center control-group">
      <input class="text center medium light" type="text" name="firstName" value="" placeholder="First Name">
    </div>
    <div class="text center control-group">
      <input class="text center medium light" type="text" name="lastName" value="" placeholder="Last Name">
    </div>
    <div class="text center control-group">
      <input class="text center medium light" type="submit" name="register" value="Register">
    </div>
    <div class="control-group text center">
      <a class="link-block text center small light" href="password-reset">Password Reset</a>
      <a class="link-block text center small light" href="login">Login</a>
    </div>
    <div class="control-group text center">
      {{#each errors}}
      <strong> <p class="text center medium light">{{this}}</p> </strong>
      {{/each}}
    </div>
  </form>
</div>
<link rel="stylesheet" href="css/dist/login.min.css">
